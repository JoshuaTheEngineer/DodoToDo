<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editor_num_units">
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_increment_num_units"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimary"
            android:layout_marginTop="@dimen/list_fab_margin"
            android:layout_marginBottom="@dimen/list_fab_margin"
            android:layout_marginStart="@dimen/list_fab_margin"
            android:layout_marginEnd="@dimen/list_fab_margin"
            app:fabSize="mini"
            app:srcCompat="@drawable/ic_increment"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_decrement_num_units"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimary"
            android:layout_marginTop="@dimen/list_fab_margin"
            android:layout_marginBottom="@dimen/list_fab_margin"
            android:layout_marginStart="@dimen/list_fab_margin"
            android:layout_marginEnd="@dimen/list_fab_margin"
            app:fabSize="mini"
            app:srcCompat="@drawable/ic_decrement"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/fab_increment_num_units"
            app:layout_constraintLeft_toLeftOf="@id/fab_increment_num_units"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_units_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:padding="20dp"
            android:text="NUMBER OF UNITS"
            android:maxLines="1"
            android:textSize="@dimen/list_text_size"
            android:textColor="@color/list_text_color"
            app:layout_constraintStart_toEndOf="@+id/fab_decrement_num_units"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv_units"/>

        <TextView
            android:id="@+id/tv_units"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:padding="20dp"
            android:text="0"
            android:maxLines="1"
            android:textSize="@dimen/list_text_size"
            android:textColor="@color/list_text_color"
            app:layout_constraintStart_toEndOf="@+id/fab_decrement_num_units"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_units_label"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
